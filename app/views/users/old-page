




.row.large-collapse.full-width.header
  .large-4.small-4.colomns
  .large-8.small-8.columns
    = link_to user_path, class: "hollow button small-2 columns static" do
      |post
      .div
        = user.posts.count
    end
    = link_to following_user_path, class: "hollow button small-2 columns" do
      |following
      .div
        = user.following.count
    end
    = link_to followers_user_path, class: "hollow button small-2 columns" do
      |followers
      .div
        = user.followers.count
    end
.profile-info
  div
    img src="/assets/Profile-Avatar.jpg" alt="альтернативный текст" class="avatar"
  .user-info
    div class="follow"
      - if !current_user.nil? && current_user != user
        - if current_user.following?(user)
          = link_to 'unfollow', user_relationship_path(user), remote: true, method: :delete
        - else
          = link_to 'follow', user_relationships_path(user), remote: true, method: :post
      - else
        = link_to 'edit', edit_user_registration_path
    .full-name
      = user.full_name
    div
      = link_to user.at_nickname, user_path, class: "at_nickname"
    div
      | Joined
      = user.joined_at
